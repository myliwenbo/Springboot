<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <!-- 生成的Java文件的编码 -->
        <property name="javaFileEncoding" value="UTF-8"/>
        <!--beginningDelimiter和endingDelimiter：指明数据库的用于标记数据库对象名的符号，比如ORACLE就是双引号，MYSQL默认是`反引号； -->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <!-- 连接数据库 -->
        <!--通用 Mapper 插件，可以生成带注解的实体类 -->
        <plugin type="vip.xjdai.mybatis.plug.CustomizationPlugin">
            <property name="mappers" value="vip.xjdai.mybatis.plug.BaseMapper"/>
            <property name="caseSensitive" value="true"/>
            <property name="forceAnnotation" value="true"/>
        </plugin>

        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <!-- 数据库连接
        -->
        <!-- 	<jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://rm-uf6r662t6vr8757h7o.mysql.rds.aliyuncs.com:3306/project_logs" userId="logger"
                password="N7@cFe8Rz8EQVCM7" /> -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://106.14.136.81:3306/db_hospital"
                        userId="hospital"
                        password="CBWk6towTd6xc88e"/>


        <!-- Model生成 -->
        <javaModelGenerator targetPackage="cn.vihost.entity" targetProject=".\src\main\java"/>

        <!-- mapper文件 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>
        <!-- 接口 -->
        <javaClientGenerator targetPackage="cn.vihost.mapper" targetProject="src/main/java" type="XMLMAPPER"/>

        <!-- 表明 -->
        <!-- 单个表示是一张，user% 表示模糊 -->
        <table tableName="tbl_hospital">
            <domainObjectRenamingRule searchString="^Tbl" replaceString=""/>
        </table>
    </context>
</generatorConfiguration>